<!-- Header -->
<%- include('partials/header', {showSearchBar: false}) %>
<!-- /Header -->

<section id="search">
  <div
    class="form-container container-lg w-100 d-flex align-items-center justify-content-center"
  >
    <form id="search-form" class="w-75" action="/decretos" method="GET">
      <div class="form-group">
        <div class="row">
          <div class="col">
            <input
              type="search"
              placeholder="Número"
              name="num"
              class="form-control form-control-lg"
              aria-describedby="numberInput"
            />
          </div>
          <div class="col">
            <input
              type="search"
              placeholder="Año"
              name="anho"
              class="form-control form-control-lg"
            />
          </div>
        </div>
      </div>

      <div id="adv-filters" class="my-3"></div>

      <div class="row">
        <div class="col">
          <button
            id="search-button"
            type="submit"
            class="btn btn-primary"
            value="search"
          >
            Buscar
          </button>
          <button
            id="add-filter"
            onclick="addFilter(event)"
            class="btn btn-secondary"
          >
            Agregar filtros
          </button>
        </div>
      </div>
    </form>
  </div>
</section>

<!-- Footer -->
<%- include('partials/footer') %>
<!-- /Footer -->
